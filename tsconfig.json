{
  "compilerOptions": {
    "target": "ES6",
    "alwaysStrict": true,
    "lib": ["ES6", "ScriptHost"],
    "listFiles": true,
    "listEmittedFiles": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
